<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonTestKoinScopeWithFragmentActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Koin Scope with Fragments"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonTestKoinScopeWithActivityActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Koin Scope with Activity"
        app:layout_constraintTop_toBottomOf="@id/buttonTestKoinScopeWithFragmentActivity" />

</androidx.constraintlayout.widget.ConstraintLayout>